@model VehicleFormViewModel;

@{
    ViewData["Title"] = "Add a vehicle for selling";
}

<h1 class="text-center">@ViewData["Title"]</h1>


<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="AddVehicleForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Title">Title*</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Title" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Price">Price*</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Price" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <select>
                @{
                    foreach (var make in Model.Makes)
                    {
                        <option value="@Model.MakeId" >
                            @make.Name
                        </option>
                    }
                }
            </select>
            <select>
                @{
                    foreach (var modelItem in Model.Models)
                    {
                        <option value="@Model.ModelId">
                            @modelItem.Name
                        </option>
                    }
                }
            </select>
            <select>
                @{
                    foreach (var transmissionType in Model.TransmissionTypes)
                    {
                        <option value="@Model.TransmissionTypeId">
                            @transmissionType.Name
                        </option>
                    }
                }
            </select>
            <select>
                @{
                    foreach (var color in Model.Colors)
                    {
                        <option value="@Model.ColorId">
                            @color.Name
                        </option>
                    }
                }
            </select>
            <select>
                @{
                    foreach (var fuelType in Model.FuelTypes)
                    {
                        <option value="@Model.FuelTypeId">
                            @fuelType.Name
                        </option>
                    }
                }
            </select>
            <select>
                @{
                    foreach (var category in Model.Categories)
                    {
                        <option value="@Model.CategoryTypeId">
                            @category.Name
                        </option>
                    }
                }
            </select>
            <div class="text-center mb-3">
                <label asp-for="@Model.CubicCapacity">Cubic Capacity*</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.CubicCapacity" />
                <span asp-validation-for="@Model.CubicCapacity" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.HorsePower">Horse Power*</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.HorsePower" />
                <span asp-validation-for="@Model.HorsePower" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Mileage">Mileage*</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Mileage" />
                <span asp-validation-for="@Model.Mileage" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Location">Location</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Location" />
                <span asp-validation-for="@Model.Location" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="AddVehicleSubmit" type="submit" class="btn btn-primary">Add for selling</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
