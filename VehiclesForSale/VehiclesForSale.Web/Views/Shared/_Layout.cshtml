<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VehiclesForSale</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body class="body">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 bar sticky">
            <div class="container-fluid">
                <h6 class="navbar-brand my-1">VehiclesForSale</h6>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item box border-start border-end">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Vehicle" asp-action="Search">Търси <i class="fas fa-search"></i></a>
                        </li>
                        <li class="nav-item box  border-end">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Vehicle" asp-action="Index">Последно добавени <i class="fas fa-car"></i></a>
                        </li>
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item box border-end">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Vehicle" asp-action="WatchList">Запазени <i class="fas fa-eye"></i></a>
                            </li>

                            <li class="nav-item box border-end">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Vehicle" asp-action="YourVehicles">Вашите обяви <i class="fas fa-dollar-sign"></i></a>
                            </li>

                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

   

   

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - VehiclesForSale
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
