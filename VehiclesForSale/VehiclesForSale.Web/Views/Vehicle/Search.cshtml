@model VehicleSearchViewModel;
@{
    ViewData["Title"] = "Search for vehicle";
}

    <div class="row">
        <div class="col-md-4">
            <form id="SearchVehicleForm" method="post">
            <h1 class="text-center mb-lg-3 col-md-12">@ViewData["Title"]</h1>
                    <hr />
                    <div class="row text-center">
                        <div class="text-center mb-3 col-md-6">
                            <label asp-for="@Model.MakeId" class="form-label-add-edit">Make: </label>
                            <select asp-for="@Model.MakeId" class="form-control" aria-required="true">
                                @foreach (var make in Model.Makes)
                                {
                                    <option value="@make.Id">@make.Name</option>
                                }
                            </select>
                            <span asp-validation-for="@Model.MakeId" class="text-danger"></span>
                        </div>
                        <div class="text-center mb-3 col-md-6">
                            <label asp-for="@Model.ModelId" class="form-label-add-edit">Model: </label>
                            <select asp-for="@Model.ModelId" class="form-control" aria-required="true">
                                @foreach (var mod in Model.Models)
                                {
                                    <option value="@mod.Id">@mod.Name</option>
                                }
                            </select>
                            <span asp-validation-for="@Model.ModelId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="text-center mb-3 col-md-6">
                            <label asp-for="@Model.PriceFrom">Price Range From</label>
                            <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.PriceFrom" />
                            <span asp-validation-for="@Model.PriceFrom" class="text-danger"></span>
                        </div>
                        <div class="text-center mb-3 col-md-6">
                            <label asp-for="@Model.PriceTo">Price Range To</label>
                            <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.PriceTo" />
                            <span asp-validation-for="@Model.PriceTo" class="text-danger"></span>
                        </div>

                        <div class="text-center mb-3 col-md-6">
                            <label asp-for="@Model.SelectedYearFrom" class="form-label-add-edit">Year From: </label>
                            <select asp-for="@Model.SelectedYearFrom" class="form-control" aria-required="true">
                                <option value="">Select Year</option>
                                @foreach (var year in Model.Years)
                                {
                                    <option value="@year">@year</option>
                                }
                            </select>
                            <span asp-validation-for="@Model.SelectedYearFrom" class="text-danger"></span>
                        </div>

                        <div class="text-center mb-3 col-md-6">
                            <label asp-for="@Model.SelectedYearTo" class="form-label-add-edit">Year To: </label>
                            <select asp-for="@Model.SelectedYearTo" class="form-control" aria-required="true">
                                <option value="">Select Year</option>
                                @foreach (var year in Model.Years)
                                {
                                    <option value="@year">@year</option>
                                }
                            </select>
                            <span asp-validation-for="@Model.SelectedYearTo" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="row text-center">
                        <div class="text-center mb-3 col-md-6">
                            <label asp-for="@Model.TransmissionTypeId" class="form-label-add-edit">Transmission: </label>
                            <select asp-for="@Model.TransmissionTypeId" class="form-control" aria-required="true">
                                @foreach (var tr in Model.TransmissionTypes)
                                {
                                    <option value="@tr.Id">@tr.Name</option>
                                }
                            </select>
                            <span asp-validation-for="@Model.TransmissionTypeId" class="text-danger"></span>
                        </div>
                        <div class="text-center mb-3 col-md-6">
                            <label asp-for="@Model.FuelTypeId" class="form-label-add-edit">Fuel type: </label>
                            <select asp-for="@Model.FuelTypeId" class="form-control" aria-required="true">
                                @foreach (var fuelType in Model.FuelTypes)
                                {
                                    <option value="@fuelType.Id">@fuelType.Name</option>
                                }
                            </select>
                            <span asp-validation-for="@Model.FuelTypeId" class="text-danger"></span>
                        </div>

                        <div class="text-center mb-3 col-md-6">
                            <label asp-for="@Model.CategoryTypeId" class="form-label-add-edit">Body type: </label>
                            <select asp-for="@Model.CategoryTypeId" class="form-control" aria-required="true">
                                @foreach (var categoryType in Model.Categories)
                                {
                                    <option value="@categoryType.Id">@categoryType.Name</option>
                                }
                            </select>
                            <span asp-validation-for="@Model.CategoryTypeId" class="text-danger"></span>
                        </div>
                        <div class="text-center mb-3 col-md-6">
                            <label asp-for="@Model.ColorId">Color: </label>
                            <select asp-for="@Model.ColorId" class="form-control" aria-required="true">
                                @foreach (var color in Model.Colors)
                                {
                                    <option value="@color.Id">@color.Name</option>
                                }
                            </select>
                            <span asp-validation-for="@Model.ColorId" class="text-danger"></span>
                        </div>
                        <div class="text-center mb-3 col-md-6">
                            <label asp-for="@Model.MileageTo">Mileage To: </label>
                            <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.MileageTo" />
                            <span asp-validation-for="@Model.MileageTo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="text-center mb-3 col-md-6">
                            <label asp-for="@Model.CubicCapacityTo">Cubic Capacity To:</label>
                            <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.CubicCapacityTo" />
                            <span asp-validation-for="@Model.CubicCapacityTo" class="text-danger"></span>
                        </div>
                        <div class="text-center mb-3 col-md-6">
                            <label asp-for="@Model.HorsePowerTo">Horse Power To:</label>
                            <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.HorsePowerTo" />
                            <span asp-validation-for="@Model.HorsePowerTo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="mb-3 col-md-12 align-content-center">
                            <input class="btn btn-primary mb-2 w-100 p-3 fw-bold" type="submit" value="Search for vehicle" />
                        </div>
                    </div>
            </form>
        </div>
        <div class="col-md-8">
            <h1 class="text-center col-lg-12">Latest vehicles</h1>
            <hr />
        <div class="row text-center">
            @foreach (var car in Model.Vehicles.Take(4))
            {
                var checkImage = car.MainImage ?? "NoImage.jpg";
                <div class="col-md-6">
                    <div class="container m-1">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card-sl">
                                    <div class="card-image">
                                        <img src="/Uploads/@checkImage" />
                                    </div>
                                    <div class="row justify-content-center card-heading">
                                        <div class="col-sm-6 col-lg-12 text-center">
                                            @car.Title
                                        </div>
                                        <div class="col-sm-6 col-lg-12 text-center">
                                            Price: $@car.Price
                                        </div>
                                    </div>


                                    <div class="row justify-content-center">
                                        <div class="col-md-6 text-center">Make: @car.Make</div>
                                        <div class="col-md-6 text-center">Model: @car.Model</div>
                                    </div>
                                    <div class="row justify-content-center">
                                        <div class="col-md-6 text-center">Year: @car.Month, @car.Year</div>
                                        <div class="col-md-6 text-center">Mileage: @car.Mileage km</div>
                                    </div>
                                    <div class="row justify-content-center">
                                        <div class="col-md-6 text-center">Transmission: @car.Transmission</div>
                                        <div class="col-md-6 text-center">Fuel: @car.FuelType</div>
                                    </div>
                                    <a asp-action="Details" asp-controller="Vehicle" asp-route-id="@car.Id" class="card-button"> Check Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
           


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">

        $(document).ready(function () {
            // Dropdownlist Selectedchange event
            $("#MakeId").change(function () {
                var makeId = $(this).val(); // Get the selected makeId

                $("#ModelId").empty(); // Clear the current options in the Model dropdown

                // If no makeId is selected, show a default option in the Model dropdown
                if (makeId === "") {
                    $("#ModelId").append('<option value="">Select a Model</option>');
                    return;
                }

                // Make an AJAX POST request to retrieve the models based on the selected makeId
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetModelValues")',
                    dataType: 'json',
                    data: { id: makeId }, // Send the selected makeId as 'id'
                    success: function (models) {
                        // models contains the JSON formatted list of models returned from the controller

                        $("#ModelId").append('<option value="">Select a Model</option>');
                        $.each(models, function (i, model) {
                            $("#ModelId").append('<option value="' + model.id + '">' + model.name + '</option>');
                        });
                    },
                    error: function (ex) {
                        alert('Failed to retrieve models: ' + ex);
                    }
                });
            });
        });
    </script>
}