@model VehicleFormViewModel;
@{
    ViewData["Title"] = "Search for vehicle";
}



<div class="row text-center">
    <div class="text-center mb-lg-3 col-lg-12">
        <form id="AddVehicleForm" method="post" asp-controller="Vehicle" asp-action="Search">
           
            <div class="mb-lg-3 col-lg-4">
                <h1 class="text-center mb-lg-3 col-lg-12">@ViewData["Title"]</h1>
                <hr/>
                <div class="row text-center">
                    <div class="text-center mb-3 col-md-6">
                        <label asp-for="@Model.MakeId" class="form-label-add-edit">Make: </label>
                        <select asp-for="@Model.MakeId" class="form-control" aria-required="true">
                            @foreach (var make in Model.Makes)
                            {
                                <option value="@make.Id">@make.Name</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.MakeId" class="text-danger"></span>
                    </div>
                    <div class="text-center mb-3 col-md-6">
                        <label asp-for="@Model.ModelId" class="form-label-add-edit">Model: </label>
                        <select asp-for="@Model.ModelId" class="form-control" aria-required="true">
                            @foreach (var mod in Model.Models)
                            {
                                <option value="@mod.Id">@mod.Name</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.ModelId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="text-center mb-3 col-md-6">
                        <label asp-for="@Model.Price">Price Range From</label>
                        <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Price"/>
                        <span asp-validation-for="@Model.Price" class="text-danger"></span>
                    </div>
                    <div class="text-center mb-3 col-md-6">
                        <label asp-for="@Model.Price">Price Range To</label>
                        <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Price"/>
                        <span asp-validation-for="@Model.Price" class="text-danger"></span>
                    </div>

                    <div class="text-center mb-3 col-md-6">
                        <label asp-for="@Model.Year">Date From: </label>
                        <input type="month" class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.Year"/>
                        <span asp-validation-for="@Model.Year" class="text-danger"></span>
                    </div>

                    <div class="text-center mb-3 col-md-6">
                        <label asp-for="@Model.Year">Date To: </label>
                        <input type="month" class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.Year"/>
                        <span asp-validation-for="@Model.Year" class="text-danger"></span>
                    </div>

                </div>
                <div class="row text-center">
                    <div class="text-center mb-3 col-md-6">
                        <label asp-for="@Model.TransmissionTypeId" class="form-label-add-edit">Transmission: </label>
                        <select asp-for="@Model.TransmissionTypeId" class="form-control" aria-required="true">
                            @foreach (var tr in Model.TransmissionTypes)
                            {
                                <option value="@tr.Id">@tr.Name</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.TransmissionTypeId" class="text-danger"></span>
                    </div>
                    <div class="text-center mb-3 col-md-6">
                        <label asp-for="@Model.FuelTypeId" class="form-label-add-edit">Fuel type: </label>
                        <select asp-for="@Model.FuelTypeId" class="form-control" aria-required="true">
                            @foreach (var fuelType in Model.FuelTypes)
                            {
                                <option value="@fuelType.Id">@fuelType.Name</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.FuelTypeId" class="text-danger"></span>
                    </div>

                    <div class="text-center mb-3 col-md-6">
                        <label asp-for="@Model.Location">Location(optional)</label>
                        <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Location"/>
                        <span asp-validation-for="@Model.Location" class="text-danger"></span>
                    </div>

                    <div class="text-center mb-3 col-md-6">
                        <label asp-for="@Model.CategoryTypeId" class="form-label-add-edit">Body type: </label>
                        <select asp-for="@Model.CategoryTypeId" class="form-control" aria-required="true">
                            @foreach (var categoryType in Model.Categories)
                            {
                                <option value="@categoryType.Id">@categoryType.Name</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.CategoryTypeId" class="text-danger"></span>
                    </div>
                    <div class="text-center mb-3 col-md-6">
                        <label asp-for="@Model.ColorId">Color: </label>
                        <select asp-for="@Model.ColorId" class="form-control" aria-required="true">
                            @foreach (var color in Model.Colors)
                            {
                                <option value="@color.Id">@color.Name</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.ColorId" class="text-danger"></span>
                    </div>
                    <div class="text-center mb-3 col-md-6">
                        <label asp-for="@Model.Mileage">Mileage To: </label>
                        <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Mileage"/>
                        <span asp-validation-for="@Model.Mileage" class="text-danger"></span>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="text-center mb-3 col-md-6">
                        <label asp-for="@Model.CubicCapacity">Cubic Capacity</label>
                        <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.CubicCapacity"/>
                        <span asp-validation-for="@Model.CubicCapacity" class="text-danger"></span>
                    </div>
                    <div class="text-center mb-3 col-md-6">
                        <label asp-for="@Model.HorsePower">Horse Power</label>
                        <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.HorsePower"/>
                        <span asp-validation-for="@Model.HorsePower" class="text-danger"></span>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="mb-3 col-md-12 align-content-center">
                        <input class="btn btn-primary mb-2 w-100 p-3 fw-bold" type="submit" value="Search for vehicle"/>
                    </div>
                </div>
            </div>
        </form>
        
