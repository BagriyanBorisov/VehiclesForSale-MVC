@model VehicleFormViewModel;

@{
    ViewData["Title"] = "Add a vehicle for selling";
}

<h1 class="text-center mb-lg-3 col-lg-12">@ViewData["Title"]</h1>


<div class="row text-center">
<div class="text-center mb-lg-3 col-lg-12">
    <form id="AddVehicleForm" method="post">
            @await Html.PartialAsync("../Shared/_VehicleFormPartial", Model);
            <div class="mb-3 col-lg-6 align-content-center offset-lg-3">
            <input class="btn btn-success mb-2 w-100 p-3 fw-bold" type="submit" value="Add Vehicle and go to add images"/>
        </div>
    </form>
</div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}