@model ICollection<VehicleIndexViewModel>

@{
    int modelCount = Model.Count();
    int skip = 0;
    int take = 3;
}
<h2 class="text-center mb-3">Your Vehicles</h2>
<hr />
@while (modelCount != 0)
{
    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-lg-4">
                <div class="container" style="margin-top: 50px;">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card-sl">
                                <div class="card-image">
                                    <img src="/Uploads/@car.MainImage" />

                                </div>
                                <div class="card-heading">
                                    @car.Make @car.Model
                                </div>
                                <div class="card-text">
                                    @car.Title
                                </div>
                                <div class="card-text">
                                    $@car.Price
                                </div>

                                <div class="row">
                                    <div class="col-4">
                                        <a asp-action="Details" asp-controller="Vehicle" asp-route-id="@car.Id" class="btn btn-primary col-12">Details</a>
                                        </div>
                                    <div class="col-4">
                                        <a asp-action="Edit" asp-controller="Vehicle" asp-route-id="@car.Id" class="btn btn-warning col-12">Edit</a>
                                        </div>
                                    <div class="col-4">
                                        <a asp-action="Delete" asp-controller="Vehicle" asp-route-id="@car.Id" class="btn btn-danger col-12">Delete</a>
                                        </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>
            @if (true)
            {
                modelCount--;
            }
        }
    </div>
    @if (true)
    {
        skip += 3;
    }
}



