@model UpdatePasswordViewModel;

@{
    ViewData["Title"] = "Update Password";
}
<div class="row mt-5">
    <div class="row mt-5">
<h1 class="text-center">@ViewData["Title"]</h1>


<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="updateForm" method="post">
            <hr />
            <div class="text-center mb-3">
                <label asp-for="@Model.OldPassword">Your Password</label>
                <input class="form-control" type="password" placeholder="********" autocomplete="new-password" aria-required="true" asp-for="@Model.OldPassword" />
                <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Password">New Password</label>
                <input class="form-control" type="password" placeholder="********" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.ConfirmPassword">Confirm New Password</label>
                <input class="form-control" type="password" placeholder="********" autocomplete="new-password" aria-required="true" asp-for="@Model.ConfirmPassword" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="editPass" type="submit" class="btn btn-warning">Update Password</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


