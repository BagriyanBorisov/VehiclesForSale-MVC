@model RegisterViewModel;

@{
    ViewData["Title"] = "Вашият профил";
}
<div class="row mt-5">
</div>
<div class="row mt-5">
</div>
<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-8 mx-auto login-register-container" id="profile-container">
            <div class="d-flex justify-content-center mt-4 mb-2">
                <p class="h4 m-0">
                    <span class="pe-1">Наименование: @Model.UserName</span>
                </p>
            </div>
            <hr />
            <div class="d-flex justify-content-center mb-3">
                <div class="align-text-top">
                    <span class="h4">Електронна поща: @Model.Email</span>
                </div>

            </div>
            <hr />
            <div class="d-flex justify-content-center mb-3">
                <div class="align-text-top">
                    <span class="h4">Тел. Номер: @Model.PhoneNumber</span>
                </div>
            </div>
            <hr />
            <div class="text-center mb-2 pb-2">
                <a asp-action="UpdateInformation" asp-controller="Account" id="updateInfo" class="btn btn-primary">Обнови информация</a>
                <a asp-action="UpdatePassword" asp-controller="Account" id="updatePass" class="btn btn-warning">Обнови парола</a>
            </div>
        </div>
    </div>

        <div class="row mt-1">
            <a class="col-md-4 offset-md-4">
                <img src="~/Uploads/Rectangular_Car_Logo_Light_Blue_Background (1).png" class="center-block card-img" alt="Продажба на коли">
            </a>
        </div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

